pipeline {
    agent { label 'JDK_17'}
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    triggers {
        pollSCM('* * * * *')
    }
    tools {
        jdk 'JDK_17'
    }
    stages {
        stage('git') {
            steps {
                git url: 'https://github.com/asusrepos/spring-petclinic.git',
                git branch: 'develop'
            }
        }
        stage('build and pakage') {
            steps {
                sh script: 'mvn package'
            }
        }
        stage('reporting') {
            steps {
                junit testResults: '**/target/surefire-reports/TEST-*.xml'
            }
        }
    }
}